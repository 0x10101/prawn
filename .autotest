Autotest.add_hook :initialize do |at|
  at.clear_mappings
  at.add_mapping(/^lib\/.*\.rb$/) do |filename, _|
    possible = File.basename(filename).gsub '_', '_?'
    at.files_matching %r%^spec/.*#{possible}$%
  end

  at.add_mapping(/^spec\/.*\_spec.rb/) do |f, _|
    at.files_matching(/^spec\/.*_spec.rb$/)
  end

end